<div class="navbar navbar-inverse">
    <div class="container">
        <div class="row">
            <div class="col-xs-4"><a id="back-button" class="btn btn-default navbar-btn" href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></div>
            <div class="col-xs-4 text-center"><h4 class="navbar-text">Appointment</h4></div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{firstName}} {{lastName}}</h4>
                </div>
                <div class="panel-body">
                    <p><img src="http://maps.googleapis.com/maps/api/staticmap?center={{latitude}},{{longitude}}&zoom=13&size=258x90&markers=size:small%7C{{latitude}},{{longitude}}&style=feature:all%7Celement:all%7Chue:0x428bca%7Clightness:-10%7Csaturation:-60%7Cvisibility:simplified&sensor=false"></p>                 
                    <address>
                    <strong>{{address}}</strong><br>
                    {{city}}<br>
                    {{county}}<br>
                    {{postCode}}
                    </address>
                    <hr>
                    <p class="glyphicon glyphicon-time"> {{time}} / {{duration}}mins</p>
                </div>
            </div>            
        </div>
    </div>
</div>
<div class="navbar navbar-fixed-bottom">
    <div class="container">
        <a class="btn btn-primary btn-lg btn-block navbar-btn" href="#appointment/{{id}}/progress"><span class="glyphicon glyphicon-play"> START</span></a>
    </div>
</div>
